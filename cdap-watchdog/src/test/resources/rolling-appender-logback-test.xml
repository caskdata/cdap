<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{ISO8601} - %-5p [%t:%C{1}@%L] - %m%n</pattern>
    </encoder>
  </appender>

  <logger name="co.cask.cdap" level="DEBUG"/>

  <appender name="rollingAppender" class="co.cask.cdap.logging.plugins.RollingLocationLogAppender">
  <file>logFile.log</file>
  <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
  <!-- daily rollover -->
  <fileNamePattern>logFile.%d{yyyy-MM-dd_HH-mm}.log</fileNamePattern>
  <timeBasedFileNamingAndTriggeringPolicy
  class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
  <!-- or whenever the file size reaches 50MB -->
  <maxFileSize>50MB</maxFileSize>
  </timeBasedFileNamingAndTriggeringPolicy>
  <!-- keep 30 days' worth of history -->
  <maxHistory>30</maxHistory>
  </rollingPolicy>
  <encoder>
    <pattern>%-4relative [%thread] %-5level %logger{35} - %msg%n</pattern>
  </encoder>
</appender>

  <appender name="locationAppender" class="co.cask.cdap.logging.plugins.RollingLocationLogAppender">
    <file>logFile.log</file>
    <encoder>
      <pattern>%-4relative [%thread] %-5level %logger{35} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="co.cask.cdap.logging.plugins.RollingLocationLogAppenderTest" level="INFO">
    <appender-ref ref="rollingAppender"/>
    <appender-ref ref="locationAppender"/>
  </logger>

  <root level="INFO">
    <appender-ref ref="STDOUT"/>
  </root>

</configuration>
